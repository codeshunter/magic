.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.card {
    min-height: 100px;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 10px;
    margin-top: 10px;
    color: #fff;
    background: #1E90FF;
    box-shadow: 0 0 4px #000;
}

.letitgo {
    position: absolute;
    right: 15px;
    bottom: 15px;
    border-radius: 100%;
     width: 50px;
    height: 50px; 
    box-shadow: 0 0 3px #aaa;
    line-height: 45px; 
    font-size: 30px;
    color: #1E90FF;
    border: 0px;
}